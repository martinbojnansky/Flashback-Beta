<UserControl
    x:Class="Flashback.Views.PreviewView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Flashback.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="450"
    d:DesignWidth="800">

    <Grid
        Margin="12"
        BorderBrush="{StaticResource MediumBackgroundBrush}"
        BorderThickness="4"
        Transitions="{StaticResource EntranceTransitionCollection}">
        <MediaElement
            x:Name="PreviewMediaElement"
            AutoPlay="True"
            AreTransportControlsEnabled="True"
            Stretch="Uniform">
            <MediaElement.TransportControls>
                <MediaTransportControls Style="{StaticResource MediaTransportControlsStyle}"/>
            </MediaElement.TransportControls>
        </MediaElement>
    </Grid>
</UserControl>
