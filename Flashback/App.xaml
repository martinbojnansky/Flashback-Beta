                                Height="24"
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="3"
                                AutomationProperties.AccessibilityView="Raw"/>
                                                            </Grid>
                                                        </Grid>
                                                    </Grid>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>

                                    <!--Style for Volume Flyout used in Media Transport Controls-->
                                    <Style x:Key='FlyoutStyle' TargetType='FlyoutPresenter'>
